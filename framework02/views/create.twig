<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>New book</title>
</head>
<body>

{% if (book) %}
    <form method="post">
        <span>Id: </span> <input style="width: 25px; text-align: center; background-color: lightgray" name="id" value="{{ book.id }}" readonly>
        <input type="text" name="name" placeholder="Новое название" value="{{ book.name }}" required><br>
        <button>Изменить</button>
    </form>
{% else %}
    <form action="/create" method="post">
        <input type="text" name="name" placeholder="Название книги..." required><br>
        <button>Добавить</button>
    </form>
{% endif %}

</body>
</html>
